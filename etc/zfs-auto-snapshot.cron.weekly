#!/bin/sh

source /etc/default/zfs-auto-snapshot

ENABLE=${1:-$WEEKLY}
KEEP=${31:-$WEEKLY_KEEP}
[ -z "$WEEKLY_FILESYSTEMS" ] && FILESYSTEMS='//' || FILESYSTEMS=${WEEKLY_FILESYSTEMS}

if [ $ENABLE -eq 1 ]; then
  exec zfs-auto-snapshot --quiet --syslog --label=weekly --keep=${KEEP} ${FILESYSTEMS}
fi
